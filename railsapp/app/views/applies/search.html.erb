<%= turbo_frame_tag "search-results" do %>
<% if @search_results.any? %>

<div class="row">
  <!-- Bootstrap row for horizontal layout -->
  <% @search_results.each do |result| %>
  <div class="col-md-6">
    <!-- Bootstrap column (adjust `col-md-*` as needed) -->
    <div class="card mb-3">
      <!-- Add card for better styling -->
      <div class="card-body">
        <p><strong>社員番号:</strong> <%= result['telephoneNumber'] %></p>
        <p><strong>氏名:</strong> <%= result['displayName'] %></p>
        <p><strong>部署:</strong> <%= result['department'] %></p>
        <p><strong>メールアドレス:</strong> <%= result['mail'] %></p>
        <!-- Add other attributes as needed -->
      </div>
    </div>
  </div>
  <% end %>
</div>
<% else %>
<p>検索結果がありません。</p>
<% end %>

<% end %>